<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="10dp"
    android:background="@android:color/transparent">

    <!-- Student Name -->
    <TextView
        android:id="@+id/studentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Student Roll Number -->
    <TextView
        android:id="@+id/studentRollNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll No: 101"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <!-- Student Class -->
    <TextView
        android:id="@+id/studentClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class: 10th Grade"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <!-- Student Email -->
    <TextView
        android:id="@+id/studentEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: john.doe@example.com"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <!-- Buttons to mark attendance -->
    <Button
        android:id="@+id/markPresentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mark Present" />

    <Button
        android:id="@+id/markAbsentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mark Absent" />
</LinearLayout>
